{
  "name": "six-sigma-mcp",
  "version": "1.0.0",
  "description": "Six Sigma Model Context Protocol for AI-assisted development",
  "main": "index.js",
  "scripts": {
    "start:orchestrator": "node agents/orchestrator/dist/index.js",
    "start:define": "node agents/define-agent/dist/index.js",
    "start:measure": "node agents/measure-agent/dist/index.js",
    "start:analyze": "node agents/analyze-agent/dist/index.js",
    "start:improve": "node agents/improve-agent/dist/index.js",
    "start:control": "node agents/control-agent/dist/index.js",
    "start:all-agents": "npm-run-all --parallel start:*",
    "build": "tsc",
    "test": "jest",
    "monitor": "node scripts/monitor.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "express": "^4.18.0",
    "redis": "^4.6.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5"
  }
}